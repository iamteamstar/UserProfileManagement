@model UserLoginRegister.Models.User

<h2>Profilim</h2>

<div class="card" style="max-width:600px;">
    <div class="card-body">

        <div class="text-center mb-3">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" width="120" height="120" style="border-radius:50%; object-fit:cover;" />
            }
            else
            {
                <img src="/images/default-user.png" width="120" height="120" style="border-radius:50%; opacity:0.5;" />
            }
        </div>

        <table class="table">
            <tr>
                <th>Ad Soyad</th>
                <td>@Model.FullName</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>@Model.Email</td>
            </tr>
        </table>

        <a class="btn btn-primary" href="/Account/EditProfile">Profili Düzenle</a>
    </div>
</div>
