@model UserLoginRegister.Models.User

<h2>Kullanıcı Detay</h2>

<div class="card" style="max-width: 600px;">
    <div class="card-body">

        <div class="text-center mb-3">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl"
                     width="120" height="120"
                     style="border-radius: 50%; object-fit: cover;" />
            }
            else
            {
                <img src="/images/default-user.png"
                     width="120" height="120"
                     style="border-radius: 50%; opacity:0.5;" />
            }
        </div>

        <table class="table">
            <tr>
                <th>Ad Soyad:</th>
                <td>@Model.FullName</td>
            </tr>
            <tr>
                <th>Email:</th>
                <td>@Model.Email</td>
            </tr>
            <tr>
                <th>Rol:</th>
                <td>@Model.Role</td>
            </tr>
            <tr>
                <th>Durum:</th>
                <td>
                    @if (Model.IsActive)
                    {
                        <span class="text-success">Aktif</span>
                    }
                    else
                    {
                        <span class="text-danger">Pasif</span>
                    }
                </td>
            </tr>
            <tr>
                <th>Kayıt Tarihi:</th>
                <td>@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
            </tr>
        </table>

        <a class="btn btn-secondary" href="/Admin/Index">Geri Dön</a>

        <a class="btn btn-warning" href="/Admin/Edit/@Model.UserId">Düzenle</a>

    </div>
</div>
